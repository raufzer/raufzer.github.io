---
import { Image } from "astro:assets";
import gdgdocs from "../../public/gdgdocs.png";
import mailmind from "../../public/mailmind.png";
import nanolink from "../../public/nanolink.png";
import gopherescape from "../../public/gopherescape.png";
import golaunch from "../../public/golaunch.png";
import m3ufinder from "../../public/m3ufinder.png";

interface Project {
  title: string;
  description: string;
  image: ImageMetadata;
  githubLink: string;
  liveLink?: string;
  tags: string[];
  featured?: boolean;
}

const projects: Project[] = [
  {
    title: "MailMind AI",
    description:
      "AI-powered Gmail extension providing smart email replies and workflow optimization using machine learning.",
    image: mailmind as ImageMetadata,
    githubLink: "https://github.com/raufzer/mailmind-extension",
    liveLink: "https://github.com/raufzer/mailmind-api",
    tags: ["Flutter", "Golang", "AI/ML", "Chrome Extension"],
    featured: true,
  },
  {
    title: "Flutter Docs â€“ GDG Algiers",
    description:
      "Community-driven Flutter documentation for Arabic developers.",
    image: gdgdocs as ImageMetadata,
    githubLink: "",
    liveLink: "https://docs.gdgalgiers.dev/",
    tags: ["Flutter", "Documentation", "Open Source"],
    featured: true,
  },
  {
    title: "NanoLink",
    description:
      "Full-stack URL shortener with analytics dashboard, user management, and real-time link tracking.",
    image: nanolink as ImageMetadata,
    githubLink: "https://github.com/raufzer/nanolink-website",
    liveLink: "https://github.com/raufzer/nanolink-api",
    tags: ["Flutter Web", "Django REST", "PostgreSQL"],
    featured: true,
  },
  {
    title: "Gopher Escape",
    description:
      "2D maze game using searching algorithms (BFS, DFS, A*) for pathfinding, built with Flutter and Dart",
    image: gopherescape as ImageMetadata,
    githubLink:
      "https://github.com/raufzer/1cs-ai-fundamentals-assignments/tree/main/1-search-algorithms-assignments/maze-navigation-using-informed-uninformed-search/gopherescape",
    liveLink:
      "https://drive.google.com/file/d/1cW4XzQutzFInD20SfzZ4ZEbQVMSo8fX6/view?usp=sharing",
    tags: ["Flutter", "Dart", "Game Development"],
    featured: true,
  },
  {
    title: "M3U-finder CLI",
    description:
      "Command-line tool to find and validate free M3U IPTV links from various online sources.",
    image: m3ufinder as ImageMetadata,
    githubLink: "https://github.com/raufzer/m3u-finder",
    tags: ["Golang", "Cobra", "Colly", "CLI Tool", "Web Scraping"],
    featured: true,
  },
  {
    title: "GoLaunch CLI",
    description:
      "Developer productivity tool to launch multiple programs with a single command. Available via Homebrew.",
    image: golaunch as ImageMetadata,
    githubLink: "https://github.com/raufzer/golaunch-cli",
    tags: ["Golang", "Cobra", "fav-cli", "CLI Tool"],
    featured: true,
  },
  {
    title: "Crop Prediction ML",
    description:
      "Machine learning model using supervised learning to predict optimal crop types based on soil features.",
    image: gdgdocs as ImageMetadata,
    githubLink: "https://github.com/raufzer/crop-prediction-feature-selection",
    tags: ["Python", "Scikit-learn", "Pandas", "ML"],
  },
  {
    title: "Penguin Species Clustering",
    description:
      "Unsupervised learning model using K-Means to discover patterns and classify Antarctic penguin species.",
    image: gdgdocs as ImageMetadata,
    githubLink: "https://github.com/raufzer/penguin-species-clustering",
    tags: ["Python", "K-Means", "Data Analysis"],
  },
  {
    title: "DZ Jobs API",
    description:
      "Job aggregation platform with automated scraping, caching, CI/CD pipelines, and RESTful API.",
    image: gdgdocs as ImageMetadata,
    githubLink: "https://github.com/raufzer/dz-jobs-api",
    tags: ["Golang", "Gin", "Redis", "CI/CD"],
  },
  {
    title: "Personal Portfolio",
    description:
      "My personal portfolio website built with Astro and Tailwind CSS, showcasing my projects and skills.",
    image: gdgdocs as ImageMetadata,
    githubLink: "https://github.com/raufzer/raufzer.github.io",
    tags: ["Astro", "Tailwind CSS", "Web Development"],
  },
];

const featuredProjects = projects.filter((p) => p.featured);
const otherProjects = projects.filter((p) => !p.featured);
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Featured Projects</h3>

    <!-- Featured Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
      {
        featuredProjects.map((project) => (
          <div class="group">
            <a
              href={project.liveLink || project.githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="px-3">
                <h4 class="text-2xl font-semibold mb-2">{project.title}</h4>
                <p class="text-[var(--white-icon)] mb-3 text-sm md:text-base">
                  {project.description}
                </p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs bg-[#1414149c] border border-[var(--white-icon-tr)] rounded-full text-[var(--white-icon)]">
                      {tag}
                    </span>
                  ))}
                </div>
                <div class="flex gap-2">
                  <a
                    target="_blank"
                    href={project.githubLink}
                    aria-label="GitHub Repository"
                    class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                    onclick="event.stopPropagation()"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-6"
                    >
                      <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z" />
                    </svg>
                  </a>
                  {project.liveLink && (
                    <a
                      target="_blank"
                      href={project.liveLink}
                      aria-label="Live Demo"
                      class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                      onclick="event.stopPropagation()"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        class="size-6"
                      >
                        <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>

    <!-- Other Projects -->
    <h3 class="text-3xl md:text-4xl font-medium mb-6 mt-12">More Projects</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        otherProjects.map((project) => (
          <div class="group p-6 rounded-xl border border-[var(--white-icon-tr)] bg-[#1414149c] hover:bg-[var(--white-icon-tr)] transition-all duration-300">
            <h4 class="text-xl font-semibold mb-2">{project.title}</h4>
            <p class="text-[var(--white-icon)] mb-3 text-sm">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 text-xs bg-[#0a0a0a] border border-[var(--white-icon-tr)] rounded text-[var(--white-icon)]">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex gap-2">
              <a
                target="_blank"
                href={project.githubLink}
                aria-label="GitHub Repository"
                class="text-[var(--white-icon)] hover:text-white transition duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="size-5"
                >
                  <path d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z" />
                </svg>
              </a>
              {project.liveLink && (
                <a
                  target="_blank"
                  href={project.liveLink}
                  aria-label="Live Demo"
                  class="text-[var(--white-icon)] hover:text-white transition duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="size-5"
                  >
                    <path d="M10 6V8H5V19H16V14H18V20C18 20.5523 17.5523 21 17 21H4C3.44772 21 3 20.5523 3 20V7C3 6.44772 3.44772 6 4 6H10ZM21 3V11H19L18.9999 6.413L11.2071 14.2071L9.79289 12.7929L17.5849 5H13V3H21Z" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <!-- View All Projects Button -->
    <a
      target="_blank"
      href="https://github.com/raufzer?tab=repositories"
      aria-label="View all GitHub repositories"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105"
    >
      <span class="md:text-lg text-md">View all projects on</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="size-6"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
    </a>
  </div>
</section>
